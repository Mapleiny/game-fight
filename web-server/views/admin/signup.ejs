<%- include header %>
    <div class="login-wrapper">
        <div class="box">
            <div class="content-wrap">
                <h6>注 册</h6>
                <form action="/admin/signup" id="login-form" method="post">
                    <input class="form-control" name="username" type="text" placeholder="用户名" autofocus="autofocus">
                    <input class="form-control" name="password" type="password" placeholder="密码">
                    <input class="form-control" name="password-repeat" type="password" placeholder="确认密码">
                    <input class="form-control" name="sweet" type="text" placeholder="糖果">
                    <div class="action">
                        <input type="submit" class="btn-glow primary signup" value="注册">
                    </div>
                </form>
            </div>
        </div>

        <div class="already">
            <p>已经有账户了？</p>
            <a href="signin">登 录</a>
        </div>
    </div>
<%- include footer %>